<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="#22000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopItem_list_item"
    android:paddingBottom="2dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#44000000"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/carrots"
            android:id="@+id/shopImage" />

        <TextView
            android:layout_marginTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:background="#99424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:id="@+id/itemName"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>



        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorWhite"
            android:background="#33000000"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:id="@+id/rating"
            android:layout_toRightOf="@id/shopImage"
            android:layout_alignBottom="@id/shopImage"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available : 00"
            android:id="@+id/itemsAvailable"
            android:layout_above="@id/itemPrice"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price : Rs 0"
            android:id="@+id/itemPrice"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="0dp"
            android:layout_alignBottom="@id/shopImage"
            android:layout_alignParentRight="true" />

    </RelativeLayout>



    <LinearLayout
        android:layout_marginBottom="0dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp">



        <ImageView
            android:id="@+id/reduceQuantity"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            android:src="@drawable/ic_remove_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp" />


        <EditText
            android:id="@+id/itemQuantity"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:inputType="number"
            android:text="0"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/increaseQuantity"
            android:layout_gravity="center_vertical"
            android:background="@color/grey800"
            android:src="@drawable/ic_add_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/itemTotal"
            android:layout_weight="1"
            android:layout_marginLeft="3dp"
            android:textColor="#88000000"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" x 14 (Unit Price) = Rs 240"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginLeft="0dp"
            android:id="@+id/textRemove"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:textColor="@color/colorWhite"
            android:background="@color/deepOrange900"
            android:text="Remove"
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:id="@+id/textUpdate"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginRight="0dp"
            android:textColor="@color/colorWhite"
            android:background="@color/gplus_color_1"
            android:text="Update"
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
