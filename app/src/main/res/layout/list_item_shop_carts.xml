<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    android:background="#22000000"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carts_list_item"
    android:paddingBottom="2dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="#44000000"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/carrots"
            android:id="@+id/shopImage" />

        <TextView
            android:layout_marginTop="0dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:background="#99424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="// D-Mart, Green hills"
            android:id="@+id/shopName"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>



        <TextView
            android:textColor="@color/colorWhite"
            android:background="#33000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:id="@+id/rating"
            android:layout_marginLeft="105dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp" />

        <TextView
            android:textColor="@color/colorWhite"
            android:background="#33000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Km"
            android:id="@+id/distance"
            android:layout_marginLeft="105dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp" />


        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery : \nRs 0\nper order"
            android:id="@+id/deliveryCharge"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="0dp"
            android:layout_alignBottom="@id/shopImage"
            android:layout_alignParentRight="true" />


        <ImageView
            android:src="@drawable/ic_favorite_border_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/favourite"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="10dp"/>

</RelativeLayout>


    <LinearLayout
        android:layout_marginBottom="0dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/itemsInCart"
            android:textColor="@color/colorWhite"
            android:background="@color/teal"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Items in Cart"/>

        <TextView
            android:id="@+id/cartTotal"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@color/teal"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Cart Total : Rs 0"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>
